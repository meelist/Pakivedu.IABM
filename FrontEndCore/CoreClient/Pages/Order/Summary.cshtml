@page
@model Order.SummaryModel
@{
   ViewData["Title"] = "Summary";
}

<div class="container">
   <div style="width: 30%; min-width: 300px; margin: 0 auto">
      <h2 class="form-signin-heading">Tellimuse kinnitamine</h2>

      <div class="form-group">
         <label>Tarne liik: @Model.PackageInfo.ShippingType</label>
      </div>

      <div class="form-group">
         <label>Kaubaühikute arv: @Model.PackageInfo.Amount</label>
      </div>

      <div class="form-group">
         <label>Saadetise kogukaal kilogrammides: @Model.PackageInfo.Weight</label>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Kinnita tellimus</button>
      <a asp-page="/Index" class="btn btn-lg btn-default btn-block">Katkesta</a>
   </div>
</div>