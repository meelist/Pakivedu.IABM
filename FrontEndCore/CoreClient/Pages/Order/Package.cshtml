@page
@model Order.PackageModel
@{
    ViewData["Title"] = "Package";
}

<div class="container">
   <div asp-validation-summary="All"></div>
   <form method="post" class="form-group">
      <h2 class="form-signin-heading">Sisesta saadetise andmed</h2>

      <label class="form-group">Tarne liik</label>
      <div class="form-group">

         <div class="radio-inline">
            <label><input type="radio" name="optradio" />Tavateenus</label>
         </div>
         <div class="radio-inline">
            <label><input type="radio" name="optradio" />Ekspressteenus</label>
         </div>
         <div class="radio-inline">
            <label><input type="radio" name="optradio" />Sama päeva tarne</label>
         </div>
      </div>

      <div class="form-group">
         <label for="inputAmount" class="sr-only">Kaubaühikute arv</label>
         <input asp-for="PackageInfo.Amount" type="number" min="1" max="10" id="inputAmount" class="form-control" placeholder="Kaubaühikute arv">
      </div>

      <div class="form-group">
         <label for="comment" class="sr-only">Lisainfo kullerile</label>
         <textarea asp-for="PackageInfo.Comments" class="form-control" rows="5" id="comment" placeholder="Lisainfo kullerile"></textarea>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Edasi</button>
      <a asp-page="/Index" class="btn btn-lg btn-default btn-block">Katkesta</a>
   </form>
</div>