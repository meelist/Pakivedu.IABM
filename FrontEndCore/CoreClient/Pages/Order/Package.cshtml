@page
@model Order.PackageModel
@{
    ViewData["Title"] = "Package";
}

<div class="container">
   <div asp-validation-summary="All"></div>
   <form method="post" class="form-group">
      <h2 class="form-signin-heading">Sisesta saadetise andmed</h2>

      <label class="form-group">Tarne liik</label>
      <div class="form-group">

         <div class="radio-inline">
            <label><input type="radio" name="optradio" value="Regular" />Tavateenus</label>
         </div>
         <div class="radio-inline">
            <label><input type="radio" name="optradio" value="Express" />Ekspressteenus</label>
         </div>
         <div class="radio-inline">
            <label><input type="radio" name="optradio" value="SameDay" />Sama päeva tarne</label>
         </div>
         <input id="shippingType" asp-for="PackageInfo.ShippingType" type="hidden" />
      </div>

      <div class="form-group">
         <label for="inputAmount">Kaubaühikute arv</label>
         <input asp-for="PackageInfo.Amount" type="number" min="1" max="10" id="inputAmount" class="form-control" placeholder="Kaubaühikute arv">
      </div>

      <div class="form-group">
         <label>Saadetise kogukaal kilogrammides:</label>
         <input asp-for="PackageInfo.Weight" class="form-control">
      </div>

      <div class="form-group">
         <label for="comment" class="sr-only">Lisainfo kullerile</label>
         <textarea asp-for="PackageInfo.Comments" class="form-control" rows="5" id="comment" placeholder="Lisainfo kullerile"></textarea>
      </div>

      <button class="btn btn-lg btn-primary btn-block" type="submit">Edasi</button>
      <a asp-page="/Index" class="btn btn-lg btn-default btn-block">Katkesta</a>
   </form>
</div>

<script>
   var countChecked = function () {
      var shippingType = $("input:radio:checked").val();
      $("#shippingType").val(shippingType);
   };

   $("input:radio").on("click", countChecked);
</script>