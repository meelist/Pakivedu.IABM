@{
  Layout = null;
}

<!DOCTYPE html>
<html>
<head>
   <meta charset="utf-8" />
   <meta name="viewport" content="width=device-width, initial-scale=1.0">
   <title>Superkuller</title>
   @Styles.Render("~/Content/css")
   @Scripts.Render("~/bundles/modernizr")
</head>
<body>
   <div class="container">

      <form class="form-signin" action="~/Home/Index">
         <h2 class="form-signin-heading">Sisesta oma andmed</h2>
         <label for="inputCompanyName" class="sr-only">Ettevõtte nimi</label>
         <input type="text" id="inputCompanyName" class="form-control" placeholder="Ettevõtte nimi" required="" autofocus="">

         <label for="inputClientName" class="sr-only">Kliendi nimi</label>
         <input type="text" id="inputClientName" class="form-control" placeholder="Kliendi nimi" required="">

         <label for="inputTelephone" class="sr-only">Kontakttelefon</label>
         <input type="text" id="inputTelephone" class="form-control" placeholder="Kontakttelefon" required="">

         <label for="inputEmail" class="sr-only">E-mail</label>
         <input type="email" id="inputEmail" class="form-control" placeholder="E-mail" required="">

         <label for="inputAddress" class="sr-only">Aadress</label>
         <input type="text" id="inputAddress" class="form-control" placeholder="Aadress" required="">

         <label for="inputUsername" class="sr-only">Kasutajatunnus</label>
         <input type="text" id="inputUsername" class="form-control" placeholder="Kasutajatunnus" required="">

         <label for="inputPassword" class="sr-only">Parool</label>
         <input type="password" id="inputPassword" class="form-control" placeholder="Parool" required="">

         <button class="btn btn-lg btn-primary btn-block" type="submit">Salvesta</button>
         <button class="btn btn-lg btn-default btn-block" type="button" onclick="window.location.href='@Url.Action("Login", "Home" )'">Katkesta</button>
      </form>
   </div>
</body>
</html>
